/dts-v1/;

/include/ "apm-storm.dtsi"

/ {
	model = "APM X-Gene Mustang board";
	compatible = "apm,mustang", "apm,xgene-storm";

	memreserve = <0x40 0x00000000 0x00 0x00010000>; /* SMP trampoline */

	memory {
		#address-cells = <2>;
		#size-cells = <2>;
		device_type = "memory";
		reg = <0x00 0x00000000 0x00 0x02000000>;
	};

	chosen {
		linux,stdout-path = "/soc/serial@1c020000";
	};
};

/*
 * Board-specific peripheral configurations
 */
&serial0 {
	status = "ok";
};

&menet {
	status = "ok";
};

&sgenet0 {
	status = "ok";
};

&sgenet1 {
	status = "ok";
};

&xgenet {
	status = "ok";
};

&sata2 {
	status = "ok";
};

&sata3 {
	status = "ok";
};

&sdhc0 {
	status = "ok";
};

&spi0 {
	status = "ok";
	interrupt-parent = <&gic>;
	/* What for are 0x0 and 0x4 lines, I have no idea. */
	interrupts = <0x0 0x4a 0x4>;
	reg = <0x0 0x1c025000 0x0 0x1000
	       0x0 0x1f2ac000 0x0 0x100>;

	flash: n25q256a@0 {
	status = "ok";
	cell-index = <0>;
	#address-cells = <1>;
	#size-cells = <1>;
		compatible = "n25q256a";
		reg = <0>;
		spi-max-frequency = <15000000>;
		spi-cpha;
		spi-cpol;

		partition@0x00000000 {
			label =	"Boot loader";
			reg = <0x00000000 0x01000000>;
		};
		partition@0x01000000 {
			label = "n25q256a-data";
			reg = <0x01000000 0x01000000>;
		};
	};
};

&spi1 {
	status = "ok";
	interrupt-parent = <&gic>;
	interrupts = <0x0 0x4b 0x4>;
	reg = <0x0 0x1c026000 0x0 0x1000
	       0x0 0x1f2ac000 0x0 0x100>;
};

&i2c0 {
	status = "ok";
};

&i2c1 {
	status = "ok";
};

&dwgpio {
	status = "ok";
};

&pcie0clk {
	status = "ok";
};

&pcie0 {
	status = "ok";
};

&usb0 {
	status = "okay";
};

&usb1 {
	status = "okay";
};

&msi {
	status = "okay";
};
